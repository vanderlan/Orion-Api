{
  "$schema": "http://json.schemastore.org/template",
  "author": "Vanderlan Gomes",
  "name": "Orion API Project Template",
  "description": "A complete project template for creating a .NET 10 Web API",
  "classifications": [ "WebApi" ],
  "identity": "Orion.Api.Project.Template",
  "shortName": "orion-api",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "Orion",
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [ ".vs/**", ".git/**" ]
        }
      ]
    }
  ],
  "symbols": {
    "companyName": {
      "type": "parameter",
      "replaces": "Company",
      "defaultValue": "Company",
      "isRequired": true,
      "fileRename": "Company"
    },
    "companyNameUpper": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "companyName",
        "toLower": false
      },
      "replaces": "{companyNameUpper}"
    },
    "systemDatabase": {
      "type": "parameter",
      "description": "The database that be used on project",
      "datatype": "choice",
      "allowMultipleValues": true,
      "enableQuotelessLiterals": true,
      "choices": [
        {
          "choice": "SqlServer",
          "description": "SqlServer database"
        },
        {
          "choice": "PostgreSql",
          "description": "PostgreSql database"
        }
      ],
      "defaultValue": "SqlServer"
    }
  }
}